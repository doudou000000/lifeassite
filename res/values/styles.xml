<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="main_tab_bottom">

        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
    </style>
    
     <style name="textStye" parent="AppBaseTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="smallTextStye" parent="AppBaseTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dip</item>
    </style>

    <style name="EditextStye" parent="AppBaseTheme">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">13dip</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="EditextHitSize" parent="AppBaseTheme">
        <item name="android:textSize">12dip</item>
    </style>

    <style name="HomeDeleteBtn" parent="AppBaseTheme">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20dip</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center</item>
    </style>

    
     <style name="popWindow_animation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_exit</item>
    </style>
     <style name="map_popWindow_animation">
        <item name="android:windowEnterAnimation">@anim/map_popupwindow_enter</item>
        <item name="android:windowExitAnimation">@anim/map_popupwindow_exit</item>
    </style>
    
</resources>
