<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_left"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dip" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/assistant_smal_bg" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="口袋帮"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_below="@+id/imageView1"
            android:layout_marginTop="5dip"
            android:text="让  生  活  更  便  捷"
            android:textColor="#ffffff" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dip"
        android:background="#ffffff" />
            <RelativeLayout
            android:id="@+id/slide_rl_life"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/life" />

        <RadioButton
            android:id="@+id/slide_rb_life"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView3"
            android:text="生活帮手"
            android:textColor="@drawable/menu_left_text_color"
            android:textSize="18dp"
            android:checked="true"
            android:button="@null" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/slide_rl_study"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/study" />

        <RadioButton
            android:id="@+id/slide_rb_study"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView2"
            android:text="学习帮手"
            android:textColor="@drawable/menu_left_text_color"
            android:textSize="18dp"
            android:button="@null" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/slide_rl_disport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/disport" />

        <RadioButton
            android:id="@+id/slide_rb_disport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView4"
            android:text="娱乐帮手"
            android:textColor="@drawable/menu_left_text_color"
            android:textSize="18dp"
            android:button="@null"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/slide_rl_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip" >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/more" />

        <RadioButton
            android:id="@+id/slide_rb_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView5"
            android:text="更多"
            android:textColor="@drawable/menu_left_text_color"
            android:textSize="18dp"
            android:button="@null"/>
    </RelativeLayout>
	
</LinearLayout>
