<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:focusable="true"  
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/city_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:src="@drawable/left_arraw" />
        
        <EditText
            android:id="@+id/city_search_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dip"
            android:layout_toRightOf="@id/city_search_back"
            android:background="@drawable/head_input"
            android:hint="请输入您要查询的城市"
            android:textSize="13dip" >
        </EditText>
    </RelativeLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

         <ListView
             android:id="@+id/city_search_list_view"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >
         </ListView>
        
    </LinearLayout>  

</LinearLayout>