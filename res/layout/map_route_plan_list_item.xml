<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dip"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/map_route_plan_list_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip" >

        <TextView
            android:id="@+id/map_route_plan_list_item_dur_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="TextView"
            android:textColor="@color/grey"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/map_route_plan_list_item_dic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/map_route_plan_list_item_dur_tv"
            android:layout_marginTop="5dip"
            android:text="TextView"
            android:textColor="@color/grey"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/map_route_plan_list_item_bijiao_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/map_route_plan_list_item_dic_tv"
            android:layout_alignParentRight="true"
            android:text="TextView"
            android:textColor="@color/blue"
            android:textSize="12dip"/>

    </RelativeLayout>

</LinearLayout>